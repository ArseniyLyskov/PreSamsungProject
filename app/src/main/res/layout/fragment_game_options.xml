<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center">

    <ImageView
            android:layout_gravity="top|left"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_width="630dp"
            android:layout_height="360dp"
            android:background="@drawable/panel_350_200"
    />

    <LinearLayout
            android:layout_gravity="top|left"
            android:layout_marginStart="25dp"
            android:layout_marginTop="70dp"
            android:layout_width="590dp"
            android:layout_height="320dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginStart="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:fontFamily="@font/minecraft_font"

                            android:text="Game params"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <CheckBox
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:text="Team battle"

                                android:id="@+id/fgo_team_battle"
                                android:buttonTint="#393737"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="left|center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:text="Number of teams: "
                                android:visibility="invisible"

                                android:id="@+id/fgo_team_text"
                        />

                        <EditText
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:inputType="number"
                                android:background="@drawable/button"
                                android:visibility="invisible"

                                android:id="@+id/fgo_team_number"
                        />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Ricochets"
                            android:checked="true"

                            android:id="@+id/fgo_ricochets"
                            android:buttonTint="#393737"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Tanks HP: "
                    />

                    <EditText
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:inputType="number"
                            android:background="@drawable/button"
                            android:text="3"

                            android:id="@+id/fgo_hp_number"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <CheckBox
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Debug"

                            android:id="@+id/fgo_debug"
                            android:buttonTint="#393737"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:fontFamily="@font/minecraft_font"

                            android:text="Map params"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" android:fadingEdge="vertical|none">

                        <TextView
                                android:layout_marginStart="10dp"
                                android:layout_gravity="left|center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:text="Choose map size: "
                        />

                        <Spinner
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="20dp"
                                android:fontFamily="@font/minecraft_font"

                                android:id="@+id/fgo_spinner"
                        />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <TextView
                                android:layout_marginStart="40dp"
                                android:layout_gravity="left|center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:text="Width: "
                                android:visibility="invisible"

                                android:id="@+id/fgo_width_text"
                        />

                        <EditText
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:inputType="number"
                                android:visibility="invisible"
                                android:background="@drawable/button"

                                android:id="@+id/fgo_width"
                        />

                        <TextView
                                android:layout_marginStart="50dp"
                                android:layout_gravity="left|center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:text="Height: "
                                android:visibility="invisible"

                                android:id="@+id/fgo_height_text"
                        />

                        <EditText
                                android:layout_width="40dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:fontFamily="@font/minecraft_font"
                                android:inputType="number"
                                android:visibility="invisible"
                                android:background="@drawable/button"

                                android:id="@+id/fgo_height"
                        />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Minimum of available cells: "
                    />

                    <EditText
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:inputType="number"
                            android:background="@drawable/button"
                            android:text="1"

                            android:id="@+id/fgo_min_cells"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Chance of an empty cell: "
                    />

                    <EditText
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:inputType="number"
                            android:background="@drawable/button"
                            android:text="20"

                            android:id="@+id/fgo_empty_cell"
                    />

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="%"
                    />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="Chance of creating a wall: "
                    />

                    <EditText
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:inputType="number"
                            android:background="@drawable/button"
                            android:text="40"

                            android:id="@+id/fgo_creating_wall"
                    />

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="left|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:fontFamily="@font/minecraft_font"
                            android:text="%"
                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9">

            <Button
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:textAllCaps="false"
                    android:text="Back"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/minecraft_font"

                    android:id="@+id/fgo_back"
            />

            <Button
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:textAllCaps="false"
                    android:text="Apply"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/minecraft_font"

                    android:id="@+id/fgo_apply"
            />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>