<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <ImageView
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/panel_350_200"
    />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="30dp">

        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Enter your nickname"
                android:textColorHint="#333333"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/minecraft_font"
                android:maxLength="18"

                android:id="@+id/fs_edittext"
        />

        <Button
                android:text="Join lobby"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/minecraft_font"
                android:textAllCaps="false"

                android:id="@+id/fs_join_button"
        />

        <Button
                android:layout_marginTop="3dp"
                android:text="Create lobby"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/minecraft_font"
                android:textAllCaps="false"

                android:id="@+id/fs_create_button"
        />

    </LinearLayout>

    <Button
            android:layout_margin="5dp"
            android:layout_gravity="right|top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/panel_350_300"
            android:gravity="center"
            android:text="\?"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:fontFamily="@font/minecraft_font"

            android:id="@+id/fs_about_button"
    />

</FrameLayout>